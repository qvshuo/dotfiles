#! /bin/sh

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width           0
bspc config window_gap             10

bspc config split_ratio            0.5
bspc config borderless_monocle     true
bspc config gapless_monocle        true

bspc rule -a scrcpy state=pseudo_tiled follow=on
bspc rule -a thunder state=pseudo_tiled follow=on
bspc rule -a TelegramDesktop desktop='^2' state=pseudo_tiled rectangle=1536x864+0+0 follow=on
bspc rule -a wechat-nativefier-4418c7 desktop='^1' state=pseudo_tiled rectangle=1280x800+0+0 follow=on
bspc rule -a yesplaymusic desktop='^10' state=pseudo_tiled rectangle=1536x864+0+0 follow=on
