[colors]
white = #ceffffff
black = #61707a
gray = #7f61707a
blue = #a8d8ea
purple  = #aa96da
pink = #fcbad3
yellow = #ffffd2

[bar/bsp]
fixed-center = true

width = 100%
height = 35

background = ${colors.white}
foreground = ${colors.black}

line-size = 4

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

font-0 = 更纱黑体 SC:style=Regular:size=12;3

modules-left = openweathermap-mini inbox-imap-python wlan player-cmus
modules-center = time bspwm
modules-right = backlight pulseaudio cpu memory battery

tray-position = right
tray-maxsize = 18
tray-padding = 5

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize


[module/openweathermap-mini]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/openweathermap-mini.sh
interval = 600
label-maxlen = 20
label-underline = ${colors.blue}


[module/inbox-imap-python]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/inbox-imap-python.py
interval = 60
label-maxlen = 20
label-underline = ${colors.purple}


[module/wlan]
type = internal/network
interface = wlan0
interval = 2
accumulate-stats = true

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = D: %downspeed%   U: %upspeed%
label-connected-underline = ${colors.pink}

label-disconnected = Disconnected.
label-disconnected-foreground = ${colors.gray}
label-disconnected-underline = ${colors.pink}


[module/player-cmus]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/player-cmus.sh
interval = 1
click-left = cmus-remote -n &
click-right = cmus-remote -r &
click-middle = cmus-remote -u &
label-maxlen = 50


[module/time]
type = internal/date
interval = 1

time = %I:%M %p
time-alt = %a %d %b

format = <label>

label = %time%
label-foreground = ${colors.black}
label-underline = ${colors.yellow}


[module/bspwm]
type = internal/bspwm
enable-scroll = false

format =  <label-state>

label-focused = ●
label-focused-padding = 2
label-focused-underline = ${colors.black}

label-occupied = ●
label-occupied-padding = 2
label-occupied-foreground = ${colors.gray}

label-urgent = ●!
label-urgent-padding = 2

label-empty = ○
label-empty-foreground = ${colors.gray}
label-empty-padding = 2


[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true

format = <bar>

bar-width = 10
bar-indicator = ○
bar-fill = -
bar-empty = -


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = true
interval = 5

format-volume = <bar-volume>

bar-volume-width = 10
bar-volume-indicator = ○
bar-volume-fill = -
bar-volume-empty = -

format-muted = <label-muted>

label-muted = ----------


[module/cpu]
type = internal/cpu
interval = 2

format = <label>

label = CPU: %percentage%%
label-underline = ${colors.blue}


[module/memory]
type = internal/memory
interval = 2

format = <label>

label = MEM: %gb_used%
label-underline = ${colors.purple}


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 99
poll-interval = 5

format-full = <label-full>
format-charging = <label-charging>
format-discharging = <label-discharging>

label-full = ""
label-charging = B: %percentage%%
label-charging-underline = ${colors.pink}
label-discharging = B: %percentage%%
label-discharging-underline = ${colors.pink}


[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
