[colors]
transparency = #00000000
white = #ffffff
white-alt = #80ffffff

[bar/bsp]
fixed-center = true

width = 100%
height = 30

background = ${colors.transparency}
foreground = ${colors.white}

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

font-0 = "Terminus:style=Bold:size=16;3"

modules-left = battery cpu memory pulseaudio
modules-center = time bspwm
modules-right = wlan openweathermap-mini inbox-imap-python

tray-position = right
tray-maxsize = 18
tray-padding = 5

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 99
poll-interval = 5

format-full = <label-full>
format-charging = <label-charging>
format-discharging = <label-discharging>

label-full = ""
label-charging = B: %percentage%%
label-discharging = B: %percentage%%


[module/cpu]
type = internal/cpu
interval = 2

format = <label>
label = CPU: %percentage%%


[module/memory]
type = internal/memory
interval = 2

format = <label>
label = MEM: %gb_used%


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = true
interval = 5

format-volume = <label-volume>

label-volume = Vol: %percentage%%

format-muted = <label-muted>
label-muted = muted
label-muted-foreground = ${colors.white-alt}


[module/time]
type = internal/date
interval = 1

time = %I:%M %p
time-alt =  %Y-%m-%d %A

format = <label>
label = %time%


[module/bspwm]
type = internal/bspwm
enable-scroll = false

format =  <label-state>

label-focused = #
label-focused-padding = 2

label-occupied = #
label-occupied-padding = 2
label-occupied-foreground = ${colors.white-alt}

label-urgent = #!
label-urgent-padding = 2

label-empty = -
label-empty-foreground = ${colors.white-alt}
label-empty-padding = 2


[module/wlan]
type = internal/network
interface = wlan0
interval = 2
accumulate-stats = true

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = D: %downspeed%   U: %upspeed%
label-disconnected = Disconnected
label-disconnected-foreground = ${colors.white-alt}


[module/openweathermap-mini]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/openweathermap-mini.sh
interval = 600
label-maxlen = 20


[module/inbox-imap-python]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/inbox-imap-python.py
interval = 60
label-maxlen = 20


[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
pseudo-transparency = true

; vim:ft=dosini
