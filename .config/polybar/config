[colors]
background = #26ffffff
foreground = #ffffff
foreground-alt = #7fffffff

[bar/light]
width = 100%
height = 27

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

border-size = 0

padding-left = 4
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = Sarasa Gothic SC:weight=150:size=11;2
font-1 = Font Awesome 5 Free Solid:style=Regular:size=10;1
font-2 = Weather Icons:size=11;2
font-3 = RobotoMono Nerd Font:style=Regular:size=14;3

modules-left = arch bspwm
modules-center = xwindow
modules-right = download upload cpu memory backlight pulseaudio wireless-network battery openweathermap-simple inbox-imap-python date

fixed-center = false

tray-position = right
tray-padding = 2

cursor-click = pointer

wm-restack = bspwm

[module/arch]
type = custom/text
content = 
content-font = 4

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-underline= ${colors.foreground}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/xwindow]
type = internal/xwindow
format = <label>
format-padding = 4
label = %title%
label-maxlen = 50

[module/download]
type = internal/network
interface = wlan0
label-connected =  %downspeed%
format-connected= <label-connected>

[module/upload]
type = internal/network
interface =wlan0
label-connected =  %upspeed%
format-connected = <label-connected>

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = %percentage_used%%

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label =  %percentage%%

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = <label-volume>
label-volume =  %percentage%%
label-muted =  Mute

[module/wireless-network]
type = internal/network
interface = wlan0
interval = 2
format-connected =  <label-connected>
label-connected = %essid%
format-disconnected =  <label-disconnected>
label-disconnected = %ifname% disconnected

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98
poll-interval = 5
format-charging = <label-charging>
format-discharging = <label-discharging>
label-full =  %percentage%%
label-charging =  %percentage%%
label-discharging =  %percentage%%

[module/openweathermap-simple]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/openweathermap-simple.sh
interval = 600
label-font = 3

[module/inbox-imap-python]
type = custom/script
