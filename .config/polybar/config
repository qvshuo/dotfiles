[colors]
white = #ceffffff
black_0 = #0b141a
black_1 = #61707a
black_2 = #7f61707a
blue = #a8d8ea
purple  = #aa96da
pink = #fcbad3
yellow = #ffffd2

[bar/bsp]
fixed-center = true

width = 100%
height = 35

background = ${colors.white}
foreground = ${colors.black_1}

line-size = 3

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

font-0 = 更纱黑体 SC:style=Regular:size=12;3

modules-left = time wlan player-cmus
modules-center = bspwm
modules-right = cpu memory backlight pulseaudio battery openweathermap-mini inbox-imap-python

tray-position = right
tray-maxsize = 18
tray-padding = 5

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize


[module/time]
type = internal/date
interval = 1
time = %I:%M %p
time-alt = %a %d %b
label = %time%
label-foreground = ${colors.black_0}
label-underline = ${colors.blue}


[module/wlan]
type = internal/network
interface = wlan0
interval = 2
label-connected = D: %downspeed%   U: %upspeed%
label-connected-underline = ${colors.purple}
label-disconnected = D/C.
label-disconnected-foreground = ${colors.black_2}
label-disconnected-underline = ${colors.purple}


[module/player-cmus]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/player-cmus.sh
interval = 1
click-left = cmus-remote -n &
click-right = cmus-remote -r &
click-middle = cmus-remote -u &
label-maxlen = 50


[module/bspwm]
type = internal/bspwm
enable-scroll = false

label-focused = ●
label-focused-padding = 2
label-focused-foreground = ${colors.black_0}
label-focused-underline = ${colors.black_0}

label-occupied = ●
label-occupied-padding = 2

label-urgent = ●!
label-urgent-padding = 2

label-empty = ○
label-empty-foreground = ${colors.black_2}
label-empty-padding = 2


[module/cpu]
type = internal/cpu
interval = 2
label = CPU: %percentage%%
label-underline = ${colors.pink}


[module/memory]
type = internal/memory
interval = 2
label = MEM: %gb_used%
label-underline = ${colors.yellow}


[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true
label = Br: %percentage%
label-underline = ${colors.pink}


[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
label-volume = Au: %percentage%
label-volume-underline = ${colors.purple}
label-muted = Au: uted
label-muted-underline = ${colors.purple}


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 99
poll-interval = 5

label-full = Ba: %percentage%
label-full-underline = ${colors.blue}
label-charging = Ba: %percentage%
label-charging-underline = ${colors.blue}
label-discharging = Ba: %percentage%
label-discharging-underline = ${colors.blue}


[module/openweathermap-mini]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/openweathermap-mini.sh
interval = 600
label-font = 3
label-maxlen = 20
label-underline = ${colors.purple}

[module/inbox-imap-python]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/inbox-imap-python.py
interval = 60
label-maxlen = 20
label-underline = ${colors.pink}


[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
