[colors]
background = #ceffffff
foreground = #617071

[bar/bsp]
width = 100%
height = 30

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-size = 0

padding-left = 4
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = Sarasa Gothic SC:weight=150:size=11;3
font-1 = Font Awesome 5 Free Solid:style=Regular:size=11;2
font-2 = Weather Icons:weight=250:size=11;3
font-3 = RobotoMono Nerd Font:style=Regular:size=14;4

modules-left = arch bspwm player-cmus
modules-center = date
modules-right = netspeed cpu memory backlight pulseaudio wifi battery openweathermap-simple inbox-imap-python

fixed-center = true

tray-position = right
tray-padding = 2

cursor-click = pointer

wm-restack = bspwm

[module/arch]
type = custom/text
content = 
content-font = 4

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-underline= ${colors.foreground}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = #7f61707a
label-empty-padding = 2

[module/player-cmus]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/player-cmus.sh
interval = 1
click-left = cmus-remote -n &
click-right = cmus-remote -r &
click-middle = cmus-remote -u &

[module/date]
type = internal/date
interval = 1
date = %a %b %d
time = %I:%M %p
label = %date%  %time%
label-underline = ${colors.foreground}

[module/netspeed]
type = internal/network
interface = wlan0
label-connected =  %downspeed%   %upspeed%
label-connected-underline = #a569bd
format-connected = <label-connected>

[module/cpu]
type = internal/cpu
interval = 2
label =  %percentage:2%%
label-underline = #5dade2

[module/memory]
type = internal/memory
interval = 2
label =  %percentage_used%%
label-underline = #5dade2

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label =  %percentage%%
label-underline = #58d68d

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-underline = #58d68d
label-muted =  muted
label-muted-underline = #58d68d

[module/wifi]
type = internal/network
interface = wlan0
interval = 2
format-connected = <label-connected>
label-connected =  %essid%
label-connected-underline = #f5b041
format-disconnected = <label-disconnected>
label-disconnected =  disconnected
label-disconnected-underline = #f5b041

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98
poll-interval = 5
format-charging = <label-charging>
format-discharging = <label-discharging>
label-full =  %percentage%%
label-full-underline = #ec7063
label-charging =  %percentage%%
label-charging-underline = #ec7063
label-discharging =  %percentage%%
label-discharging-underline = #ec7063

[module/openweathermap-simple]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/openweathermap-simple.sh
interval = 600
label-font = 3

[module/inbox-imap-python]
type = custom/script
